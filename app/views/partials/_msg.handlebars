{{#if success_msg}}
    <div style="
      width: 100%;
      height: 24px;
      background-color:green;
      color: white;
      text-align: center;
      
      margin: 0 auto;
    ">{{success_msg}}</div>
{{/if}}


{{#if error_msg}}
   <div style="
      width: 100%;
      height: 24px;
      background-color:red;
      color: white;
      text-align:center;
      
      margin:0 auto;
   ">{{error_msg}}</div>
{{/if}}
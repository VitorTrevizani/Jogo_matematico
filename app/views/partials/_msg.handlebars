{{#if success_msg}}
    <div style="
      width: 100%;
      height: 24px;
      background-color:green;
      color: white;
      text-align: center;
      font-size: clamp(13px, 2vw, 18px );
      margin: 0 auto;
    ">{{success_msg}}</div>
{{/if}}


{{#if error_msg}}
   <div style="
      width: 100%;
      background-color:red;
      color: white;
      text-align:center;
      font-size: clamp(9px, 2vw, 18px );
      margin:0 auto;
   "><p >{{error_msg}}</p></div>
{{/if}}


{{#if error}}
     <div style="
      width: 100%;
      height: 24px;
      background-color:red;
      color: white;
      text-align:center;
      font-size: clamp(13px, 2vw, 18px );
      margin:0 auto;
   "><p style="margin-top:3px;">{{error}}</p></div>
{{/if}}